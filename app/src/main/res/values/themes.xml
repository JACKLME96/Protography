<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Protography" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--<item name="android:fontFamily">@font/bebasneueregular</item>-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/blueS</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueS</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="cardBackgroundColor">@color/blue</item>
        <item name="colorAccent">@color/blueS</item>


        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="ms_stepperStyle">@style/LightStepperLayout</item>
        <item name="android:textColor">@color/blueS</item>

    </style>

    <style name="CustomChips" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>

    </style>

    <style name="drawer" parent="Widget.MaterialComponents.NavigationView">
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">

    </style>

    <style name="LightStepperLayout">
        <item name="ms_stepperType">tabs</item>
        <item name="ms_activeStepColor">@color/yellow</item>
        <item name="ms_inactiveStepColor">@color/blueS</item>
        <item name="ms_nextButtonColor">@color/yellow</item>
        <item name="ms_backButtonColor">@color/blueS  </item>
        <item name="ms_completeButtonColor">@color/yellow</item>
        <!--<item name="ms_tabStepDividerWidth">40dp</item>-->
    </style>
</resources>