<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Protography" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="ms_stepperStyle">@style/DarkStepperLayout</item>
          <!-- Customize your theme here. -->
    </style>

    <style name="DarkStepperLayout">
        <item name="ms_stepperType">tabs</item>
        <item name="ms_stepperLayoutTheme">@style/DarkCustomStepperLayoutTheme</item>
        <item name="ms_activeStepColor">@color/purple_500</item>
        <item name="ms_inactiveStepColor">@color/purple_200</item>
        <item name="ms_nextButtonColor">@color/purple_200</item>
        <item name="ms_backButtonColor">@color/purple_500</item>
        <item name="ms_completeButtonColor">@color/purple_200</item>
        <item name="ms_stepTabTitleStyle">@style/MSStepTabTitle</item>
        <item name="ms_stepTabSubtitleStyle">@style/MSStepTabSubtitle</item>
        <!--<item name="ms_tabStepDividerWidth">40dp</item>-->
    </style>

    <style name="MSStepTabTitle">
        <item name="android:layout_marginLeft">@dimen/ms_step_tab_text_lateral_padding</item>
        <item name="android:layout_marginStart">@dimen/ms_step_tab_text_lateral_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ms_step_tab_title_font_size</item>
    </style>

    <style name="MSStepTabSubtitle">
        <item name="android:layout_marginLeft">@dimen/ms_step_tab_text_lateral_padding</item>
        <item name="android:layout_marginStart">@dimen/ms_step_tab_text_lateral_padding</item>
        <item name="android:textColor">@color/DarkThemeLightGray</item>
        <item name="android:textSize">@dimen/ms_step_tab_subtitle_font_size</item>
    </style>

    <style name="DarkCustomStepperLayoutTheme" parent="MSDefaultStepperLayoutTheme">
        <item name="ms_bottomNavigationStyle">@style/DarkBottomNavigationStyle</item>
        <item name="ms_tabsContainerStyle">@style/DarkStepTabsContainerStyle</item>
    </style>

    <style name="DarkBottomNavigationStyle" parent="MSBottomNavigation">
        <item name="android:background">@color/DarkThemeGray</item>
    </style>

    <style name="DarkStepTabsContainerStyle" parent="MSStepTabsContainer">
        <item name="android:background">@color/DarkThemeGray</item>
    </style>

</resources>